package com.ejercicios;

public class Tema3 {

    public static void main(String[] args) {

        String[] nombres = {"David", "Juan", "Pepito", "Luisete"};
        String nombresJuntos = "";

        for (String nombre : nombres)
            nombresJuntos += nombre + ", ";

        System.out.println(nombresJuntos);
    }
}
